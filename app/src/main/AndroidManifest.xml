<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.Game"
        tools:targetApi="31" >
        <activity
            android:name=".ModelView.profiler"
            android:exported="false" />
        <activity
            android:name=".ModelView.Account.SignUp"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ModelView.Account.SignIn"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ModelView.Settings"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ModelView.MainMenu"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameActivity.StartGame_4x4"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameActivity.StartGame_6x6"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameActivity.StartGame_3x3"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ModelView.StartMenu"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SpashScreen.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>